(defwidget window_menu []
  (box
    :class "control-center"
    :orientation "v"
    :space-evenly false
    :halign "end"
    :valign "start"
    (box
      :class "window-navigation"
      :orientation "h"
      :space-evenly true
      (button :class "window-arrow-button" :onclick "niri msg action focus-column-left" "")
      (button :class "window-arrow-button" :onclick "niri msg action focus-column-right" "")
    )
    (box
      :class "window-actions"
      :orientation "v"
      :space-evenly false
      (button :class "window-action-button" :onclick "niri msg action close-window & eww close window_menu" "Close window")
      (button :class "window-action-button" :onclick "niri msg action toggle-overview & eww close window_menu" "Toggle overlay")
    )
  )
)
